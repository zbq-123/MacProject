.u-tabs {
  background: white;
}
.u-navbar--fixed {
  background: linear-gradient(to right, #fedb74, #ffbf80);
}
.orderlist {
  width: 93%;
  margin: auto;
  padding: 16rpx;
  border-radius: 20rpx;
  margin-bottom: 12rpx;
  margin-top: 18rpx;
  background: white;
  box-shadow: 0rpx 0rpx 23rpx 0rpx rgba(0, 0, 0, 0.12);
}
.orderlist .store_name {
  font-weight: bold;
  color: #333333;
  position: relative;
  display: flex;
  align-items: center;
  height: 79rpx;
}
.orderlist .store_name .pay_status {
  position: absolute;
  top: 25%;
  right: 0%;
  font-size: 24rpx;
  color: #302E2E;
}
.orderlist .store_name image {
  width: 79rpx;
  height: 100%;
  margin-right: 14rpx;
}
.orderlist .store_name .name {
  display: flex;
  justify-content: space-between;
  flex-flow: column;
  height: 100%;
}
.orderlist .store_name .name view {
  display: flex;
  align-items: center;
}
.orderlist .store_name .name view text {
  font-size: 34rpx;
  font-weight: 500;
  color: #000000;
}
.orderlist .store_name .name > text {
  font-size: 20rpx;
  font-weight: 400;
  color: #606060;
}
page {
  height: 100vh;
  background: linear-gradient(to bottom, #fefefd, #eeebe1);
}
.order_detail {
  display: flex;
  justify-content: space-between;
}
.order_detail .row {
  width: 100%;
  display: flex;
  padding: 20rpx 0 20rpx 20rpx;
  overflow-x: scroll;
}
.order_detail .row .goods {
  width: 25%;
  margin-right: 20rpx;
  display: flex;
  flex-flow: column;
  align-items: center;
}
.order_detail .row .goods text {
  font-size: 20rpx;
  font-family: Adobe Heiti Std;
  font-weight: normal;
  color: #383737;
}
.order_detail .row .goods:last-child {
  margin-right: 0;
}
.order_detail .price {
  margin: 20rpx;
  display: flex;
  flex-flow: column;
  align-items: center;
  justify-content: center;
}
.btn_4 {
  display: flex;
  margin: 8rpx;
  justify-content: space-between;
  align-items: center;
}
.btn_4 > text {
  font-size: 20rpx;
  color: #D42619;
}
.btn_4 > view {
  display: flex;
}
.btn_4 > view .btn {
  width: 98rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  font-weight: normal;
  border-radius: 20rpx;
  font-size: 20rpx;
  margin-left: 26rpx;
}
.btn_4 > view .again {
  background: #FFFFFF;
  border: 1px solid #FFA842;
  color: #FFA842;
}
.btn_4 > view .cancel_order {
  background: #F2EFEF;
  border: 1px solid #DBD8D8;
  color: #757171;
}
.btn_4 > view .pay {
  background: linear-gradient(90deg, #FFD43F, #FFA453);
  color: #FFFFFF;
}
.btn_4 > view .apply {
  background: #FFFFFF;
  border: 1px solid #FFA842;
  color: #FFA842;
}

