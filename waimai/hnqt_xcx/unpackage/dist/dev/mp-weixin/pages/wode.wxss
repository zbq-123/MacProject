page {
  background: linear-gradient(to right, #fedb74, #ffbf80);
}
.u-navbar--fixed {
  background: linear-gradient(to right, #fedb74, #ffbf80);
}
.popup {
  padding: 20rpx;
  overflow-y: scroll;
  max-height: 90vh;
  font-size: 13px;
}
.bg-color {
  border-top-left-radius: 60rpx;
  border-top-right-radius: 60rpx;
  background: linear-gradient(to bottom, #fefefd, #eeebe1);
  padding: 34rpx;
  margin-top: 20rpx;
}
.bg-color .wode_card {
  position: relative;
  box-shadow: 0px 0px 10px 0px rgba(51, 51, 51, 0.17);
  border-radius: 30rpx;
  height: 286rpx;
}
.bg-color .wode_card image {
  width: 100%;
  height: 100%;
}
.bg-color .wode_card .box {
  position: absolute;
  top: 30rpx;
  left: 30rpx;
  width: 92%;
}
.bg-color .wode_card .box .title_icon {
  width: 128rpx;
  height: 46rpx;
  line-height: 46rpx;
  background: #FFFFFF;
  border-radius: 24rpx;
  font-size: 20rpx;
  font-weight: 500;
  color: #FD684F;
  text-align: center;
}
.bg-color .wode_card .box .card {
  border-radius: 20rpx;
  color: white;
  width: 75%;
}
.bg-color .wode_card .box .card .name {
  font-size: 66rpx;
  font-family: YouSheBiaoTiHei;
  font-weight: bold;
  color: #FFFFFF;
  font-style: italic;
}
.bg-color .vie4 {
  display: flex;
  flex-flow: column;
  background-color: #FFFFFF;
  border-radius: 30rpx;
  margin: 34rpx auto 0;
  box-shadow: 0px 0px 10px 0px rgba(51, 51, 51, 0.17);
  padding: 30rpx;
}
.bg-color .vie4 > view {
  font-size: 26rpx;
}
.bg-color .vie4 .title_icon {
  display: flex;
  align-items: center;
  margin-right: 6rpx;
  margin-bottom: 22rpx;
}
.bg-color .vie4 .title_icon image {
  width: 26rpx;
  height: 24rpx;
  margin-right: 6rpx;
}
.bg-color .vie4 .my_mb {
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.bg-color .vie4 .my_mb .mb {
  display: flex;
  flex-flow: column;
  align-items: center;
  font-size: 26rpx;
  color: #808080;
}
.bg-color .vie4 .my_mb .mb > image {
  width: 72rpx;
  height: 72rpx;
  margin-bottom: 20rpx;
}
.bg-color .vie4 .my_mb .mb .title1 {
  font-size: 22rpx;
  color: black;
  margin-bottom: 14rpx;
}
.bg-color .vie4 .my_mb .mb .title1 image {
  width: 50rpx;
}
.vie1 {
  /* height: 300rpx; */
  background: linear-gradient(to right, #fedb74, #ffbf80);
  display: flex;
  align-items: center;
  padding: 20rpx 5% 20rpx 5%;
}
.vie1 > image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}
.vie1 .my {
  display: flex;
  flex-flow: column;
}
.vie1 .my text {
  font-size: 40rpx;
  color: #101010;
  margin-left: 20rpx;
}
.vie2 {
  display: flex;
  justify-content: space-around;
  align-items: center;
  width: 90%;
  height: 140rpx;
  margin: auto;
  background-color: rgba(255, 255, 255, 0.65);
  border-radius: 20rpx;
  font-size: 28rpx;
  color: dimgrey;
}
.vie2 .lab1 {
  font-size: 38rpx;
  font-weight: bold;
  color: black;
  margin-left: 8rpx;
}

