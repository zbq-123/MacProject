.tab {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}
.tab text {
  padding: 10rpx 20rpx;
  text-align: center;
  border: 2rpx solid #777777;
  border-radius: 6rpx;
  font-size: 22rpx;
  color: #777777;
  margin-right: 10rpx;
}
.tab .active {
  border: 2rpx solid #FFB514;
  color: #FFB514;
}
.u-scroll-list {
  padding: 0 !important;
}
.scroll-list {
  display: flex;
  flex-direction: column;
}
.scroll-list .scroll-list__goods-item {
  width: 20%;
  display: flex;
  flex-flow: column;
  align-items: center;
  border-radius: 6rpx;
  box-shadow: 0px 0px 6rpx 0px rgba(0, 0, 0, 0.23);
}
.scroll-list__goods-item {
  margin: 10rpx;
  padding: 12rpx;
}
.scroll-list__goods-item__image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 8rpx;
}
.scroll-list__goods-item__text {
  color: #000;
  text-align: center;
  font-size: 12px;
  margin-top: 5px;
}
.scroll-list__show-more {
  background-color: #fff0f0;
  border-radius: 3px;
  padding: 3px 6px;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.scroll-list__show-more__text {
  font-size: 12px;
  width: 12px;
  color: #f56c6c;
  line-height: 16px;
}
.u-navbar--fixed {
  background: linear-gradient(to right, #fedb74, #ffbf80);
}
.jiaxiao_bottom {
  background: linear-gradient(to bottom, #fefefd, #eeebe1);
  width: 100%;
  background: #FFFFFF;
  box-shadow: 0rpx 0rpx 36rpx 0rpx rgba(51, 51, 51, 0.11);
  display: flex;
  align-items: center;
  justify-content: space-evenly;
  position: fixed;
  bottom: 0;
  height: 100rpx;
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);
}
.jiaxiao_bottom .pinjia {
  display: flex;
  flex-flow: column;
  align-items: center;
}
.jiaxiao_bottom .pinjia image {
  width: 48rpx;
}
.jiaxiao_bottom .pinjia text {
  font-size: 20rpx;
  font-family: Adobe Heiti Std;
  font-weight: normal;
  color: #FFC72F;
}
.jiaxiao_bottom button {
  width: 212rpx;
  height: 70rpx;
  line-height: 70rpx;
  margin: 0;
  font-size: 32rpx;
  border-radius: 34rpx;
}
.jiaxiao_bottom .btn1 {
  background: #D4D4D4;
  color: #FFFFFF;
}
.jiaxiao_bottom .btn2 {
  background: linear-gradient(90deg, #FFD43F, #FFA453);
  color: #313131;
}
.model_jiaxiao {
  padding: 20rpx;
  margin-bottom: constant(safe-area-inset-bottom);
  margin-bottom: env(safe-area-inset-bottom);
}
.model_jiaxiao .jiaxiao {
  padding: 18rpx;
  background: #FFFFFF;
  box-shadow: 0rpx 0rpx 26rpx 0rpx rgba(0, 0, 0, 0.17);
  border-radius: 14rpx;
  margin-bottom: 20rpx;
}
.model_jiaxiao .jiaxiao .rule text {
  padding: 10rpx 14rpx;
  background: #FFF2D3;
  border-radius: 6rpx;
  font-size: 16rpx;
  color: #5F5F5F;
  margin-right: 17rpx;
  margin-bottom: 14rpx;
  display: inline-block;
}
.model_jiaxiao .jiaxiao .coupon {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 12rpx;
}
.model_jiaxiao .jiaxiao .coupon .coupon_1 {
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.model_jiaxiao .jiaxiao .coupon .coupon_1 image {
  width: 136rpx;
  height: 130rpx;
  margin-right: 22rpx;
}
.model_jiaxiao .jiaxiao .coupon .coupon_1 view {
  display: flex;
  flex-flow: column;
  justify-content: space-between;
  line-height: 43rpx;
}
.model_jiaxiao .jiaxiao .coupon .coupon_1 view text:nth-child(1) {
  font-size: 26rpx;
  color: #000000;
}
.model_jiaxiao .jiaxiao .coupon .coupon_1 view text:nth-child(2) {
  font-size: 20rpx;
  color: #868686;
}
.model_jiaxiao .jiaxiao .coupon .coupon_1 view text:nth-child(3) {
  font-size: 30rpx;
  color: #EE3E3F;
}
.model_jiaxiao .jiaxiao .coupon button {
  background: #FF5B29;
  border-radius: 40rpx;
  font-size: 26rpx;
  color: #FFFFFF;
  margin: 0;
  height: 46rpx;
  line-height: 46rpx;
}
.model_jiaxiao .jiaxiao .title {
  display: flex;
  align-items: center;
  position: relative;
  margin-bottom: 14rpx;
  justify-content: space-between;
}
.model_jiaxiao .jiaxiao .title view {
  display: flex;
  align-items: center;
}
.model_jiaxiao .jiaxiao .title image {
  width: 30rpx;
  margin-right: 8rpx;
}
.model_jiaxiao .jiaxiao .title text {
  font-size: 26rpx;
  font-family: Adobe Heiti Std;
  font-weight: normal;
  color: #101010;
}
.model_jiaxiao .jiaxiao .rule text {
  padding: 10rpx 14rpx;
  background: #FFF2D3;
  border-radius: 6rpx;
  font-size: 20rpx;
  color: #5F5F5F;
  margin-right: 17rpx;
  margin-bottom: 14rpx;
  display: inline-block;
}
.model_jiaxiao .jiaxiao .content {
  font-size: 23rpx;
  color: #232323;
}
.album {
  display: flex;
  flex-direction: row;
  align-items: flex-start;
}
.album__avatar {
  background-color: #f3f4f6;
  padding: 5px;
  border-radius: 3px;
}
.album__content {
  margin-left: 10px;
  flex: 1;
}

