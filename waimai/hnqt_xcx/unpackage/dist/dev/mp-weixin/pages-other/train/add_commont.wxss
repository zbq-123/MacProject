page {
  background: linear-gradient(to bottom, #fefefd, #eeebe1);
}
.u-navbar--fixed {
  background: linear-gradient(to right, #fedb74, #ffbf80);
}
button {
  width: 492rpx;
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
  background: linear-gradient(90deg, #FFD43F, #FFA453);
  border-radius: 34rpx;
  font-size: 32rpx;
  margin-top: 44rpx;
}
.model_jiaxiao {
  margin: 20rpx;
  background: #FFFFFF;
  box-shadow: 0rpx 0rpx 26rpx 0rpx rgba(0, 0, 0, 0.17);
  border-radius: 14rpx;
  margin-bottom: 20rpx;
  margin-bottom: constant(safe-area-inset-bottom);
  margin-bottom: env(safe-area-inset-bottom);
  padding: 26rpx;
}
.model_jiaxiao .jiaxiao {
  display: flex;
  align-items: center;
}
.model_jiaxiao .jiaxiao .comments {
  display: flex;
  width: 20%;
  flex-flow: column;
  justify-content: space-between;
  align-items: center;
}
.model_jiaxiao .jiaxiao .comments text {
  font-size: 22rpx;
  color: #222222;
}
.model_jiaxiao .jiaxiao .comments image {
  width: 68rpx;
  height: 70rpx;
  margin-top: 8rpx;
}
.model_jiaxiao .u-textarea {
  background-color: #F3F3F3 !important;
  margin-top: 24rpx;
  margin-bottom: 14rpx;
}
.model_jiaxiao .u-textarea textarea {
  font-size: 20rpx !important;
}
.model_jiaxiao .open {
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 26rpx;
  color: #000000;
}
.model_jiaxiao :last-child {
  margin-bottom: 0;
}

