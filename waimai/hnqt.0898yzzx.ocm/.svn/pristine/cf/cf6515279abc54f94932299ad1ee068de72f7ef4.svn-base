<script>
    layui.use(['element', 'layer', 'table', 'form', 'xlp', 'laydate'], function () {
        var $ = layui.jquery, element = layui.element, table = layui.table, layer = layui.layer, form = layui.form, xlp = layui.xlp, laydate = layui.laydate;;
        xlp.startLoading();

        //日期时间范围
        laydate.render({
            elem: '#test10'
            ,type: 'date'
            ,range: '~'
            ,trigger:'click'
        });
        //table生成
        var dataTable = table.render({
            elem: "#dataTable"
            ,url: "<?php echo url('count'); ?>"
            ,response: {
                statusCode: 200
                ,msgName: 'message'
            }
            ,cols: [[
                {field:'order_number', width:80,title:'订单编号'},
                {field:'campus_name', title:'校区'},
                {field:'store_name', title:'店铺名称'},
                {field:'use_coupon', title:'优惠券ID'},
                {field:'user_name', title:'用户',templet:function(res){
                    return res.user.nickname;
                }},
                {field:'discount_money', title:'优惠券金额'},

            ]]
            ,page: {
                layout: ['limit', 'count', 'prev', 'page', 'next', 'skip']
                ,groups: 5
                ,first: false
                ,last: false
            }
            ,done: function (res, curr, count){
                xlp.reSetIframeHeight();
                xlp.closeLoading();
                $('#amount').html(res.count_arr.amount);
            }
        });


        //监听工具条
        table.on('tool(dataTable)', function(obj){
            var data = obj.data;
            var layEvent = obj.event;

            if(layEvent === 'delete'){ //撤销
                layer.confirm("确定删除吗?", function(index){
                    xlp.postHttp("<?php echo url('delete'); ?>", {
                        id: data.id,
                    }, function (res) {
                        obj.del();
                        layer.close(index);
                        layer.msg('删除成功');
                    });
                });
            }else if(layEvent == 'edit') {
                location.href = "<?php echo url('edit'); ?>?id="+data.id;}
            else if(layEvent === 'status'){
                xlp.postHttp("<?php echo url('status'); ?>",{
                    id: data.id,
                    status: status
                },function (res) {
                    obj.update({'status': status});
                    if (status == 2) {
                        $(tr).find('.disable-btn').removeClass('layui-btn-danger');
                        $(tr).find('.disable-btn').text("开启");
                    }else{
                        $(tr).find('.disable-btn').addClass('layui-btn-danger');
                        $(tr).find('.disable-btn').text("关闭");
                    }
                })
            }
        });


        $("#addBtn").on('click', function () {
            location.href ="<?php echo url('add'); ?>";
        });
        //监听指定开关
        form.on('switch(switchTest)', function(data){
            value = this.value;
            if (data.elem.checked == true) {
                xlp.postHttp("<?php echo url('status'); ?>", {
                    id: value,
                    status: 2
                }, function (res) {
                    layer.msg("营业中");
                })
            }
            else{
                xlp.postHttp("<?php echo url('status'); ?>", {
                    id: value,
                    status: 1
                }, function (res) {
                    layer.msg("休息中");
                })
            }

        });




        //编辑排序
        table.on('edit(dataTable)', function(obj){
            xlp.postHttp("<?php echo url('edit_sort1'); ?>", {
                id: obj.data.id,
                sort: obj.value
            }, function(res) {
                layer.msg("修改成功");
            })
        });
        //一键上架
        $("#line").on('click', function () {
            xlp.postHttp("<?php echo url('on_off_goods'); ?>", {
                status: 1
            }, function(res) {
                layer.msg("修改成功");
            })
        });
        //一键下架
         $("#unline").on('click', function () {
            xlp.postHttp("<?php echo url('on_off_goods'); ?>", {
                status: 2
            }, function(res) {
                layer.msg("修改成功");
            })
        });
        //搜索
        form.on('submit(search)', function (data) {
            xlp.startLoading();
            dataTable.reload({
                where: {
                    fields: data.field
                }
                ,page: {
                    layout: ['limit', 'count', 'prev', 'page', 'next', 'skip']
                    ,groups: 5
                    ,first: false
                    ,last: false
                    ,curr: 1 //重新从第 1 页开始
                }
            });
            return false;
        });

        //搜索
        form.on('submit(search3)', function (data) {
            xlp.startLoading();
            dataTable.reload({
                where: {
                    fields: data.data.field
                }
                ,page: {
                    layout: ['limit', 'count', 'prev', 'page', 'next', 'skip']
                    ,groups: 5
                    ,first: false
                    ,last: false
                    ,curr: 1 //重新从第 1 页开始
                }
            });
            return false;
        });
    })
</script>

