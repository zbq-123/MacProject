{extend name="public/public_main" /}
{block name="content"}
<fieldset class="layui-elem-field layui-field-title">
    <legend>月卡管理</legend>
</fieldset>
<!--headToolBar-->
<div class="tip-btn-line">
    <div class="layui-btn layui-btn-sm xu-icon-btn" onclick="javascript: location.reload();"><i class="layui-icon">&#xe669; </i>刷新</div>
    <!-- <div class="layui-btn layui-btn-sm xu-icon-btn" id="addBtn"><i class="layui-icon">&#xe608;</i>添加</div> -->
    <!-- <div class="layui-btn layui-btn-sm xu-icon-btn" id="line"><i class="layui-icon">&#xe608;</i>一键上架</div>
    <div class="layui-btn layui-btn-sm xu-icon-btn" id="unline"><i class="layui-icon">&#xe608;</i>一键下架</div> -->
    <!--搜索表单-->
    <form action="" class="layui-form search-form">
        <div class="layui-form-item">
            <div class="layui-inline">
                <div class="layui-input-inline">
                    <input type="text" name="field_content" placeholder="月卡名称搜索" autocomplete="off" class="layui-input">
                    <input type="text" name="field_name" hidden value="name">
                </div>
                <div class="layui-input-inline">
                    <button class="layui-btn layui-btn-primary" lay-submit lay-filter="search"><i class="layui-icon">&#xe615;</i></button>
                </div>
            </div>
        </div>
    </form>

</div>
<!--table-->
<table class="layui-table" id="dataTable" lay-filter="dataTable"></table>
{/block}
{block name="script"}
<script type="text/html" id="rightToolBar">
    <a class="layui-btn layui-btn-sm" lay-event="edit">修改</a>
  <a class="layui-btn layui-btn-sm layui-btn-danger" lay-event="delete">删除</a>
</script>
<script type="text/html" id="statusTpl">
    {{#  if(d.status == 1){ }} 
        正常
    {{#   } }}
    {{#  if(d.status == 2){ }} 
        过期
    {{#   } }}
    {{#  if(d.status == 3){ }} 
        删除
    {{#   } }}
</script>
<script type="text/html" id="storeTpl">
    {{#  if(d.store.name){ }} 
    {{ d.store.name}}
    {{# }else{}}}
     平台
    {{# }}}
</script>
<script>
    layui.use(['element', 'layer', 'table', 'form', 'xlp'], function () {
        var $ = layui.jquery, element = layui.element, table = layui.table, layer = layui.layer, form = layui.form, xlp = layui.xlp;
        xlp.startLoading();

        //table生成
        var dataTable = table.render({
            elem: "#dataTable"
            ,url: "{:url('index')}"
            ,response: {
                statusCode: 200
                ,msgName: 'message'
            }
            ,cols: [[
                {field:'id', width:80,title:'ID'},
                {field:'name', title:'名称',templet:function(res){
                    if(res.coupon){
                        return res.coupon.name
                    }else{
                        return '--'
                    }
                }},
                {field:'user_id', title:'用户ID'},
                {field:'user_id', title:'用户',templet:function(res){
                    if(res.user){
                        return res.user.nickname
                    }else{
                        return '--'
                    }
                }},
                {field:'discount_money', title:'额度',templet:function(res){
                    if(res.coupon){
                        return res.coupon.discount_money
                    }else{
                        return '--'
                    }
                }},
                {field:'full_money', title:'满多少钱使用',templet:function(res){
                    if(res.coupon){
                        return res.coupon.full_money
                    }else{
                        return '--'
                    }
                }},
                {field:'start_time', title:'开始时间'},
                {field:'end_time', title:'结束时间'},
                
                {field:'count', title:'次数'},
                {field:'store', title:'卖家', templet: function(res){
                    if(res.store){
                        return res.store.name
                    }else{
                        return '平台';
                    }
                }},
                {field:'store', title:'状态', templet: function(res){
                    if(res.status == 0){
                        return '未付款';
                    }
                    if(res.status == 1){
                        return '已付款';
                    }
                    if(res.status == 2){
                        return '已过期';
                    }
                }},
                {fixed: 'right',width:150, align:'center', toolbar: '#rightToolBar', title:'操作'}


            ]]
            ,page: {
                layout: ['limit', 'count', 'prev', 'page', 'next', 'skip']
                ,groups: 5
                ,first: false
                ,last: false
            }
            ,done: function (res, curr, count){
                xlp.reSetIframeHeight();
                xlp.closeLoading();
            }
        });


        //监听工具条
        table.on('tool(dataTable)', function(obj){
            var data = obj.data;
            var layEvent = obj.event;

            if(layEvent === 'delete'){ //撤销
                layer.confirm("确定删除吗?", function(index){
                    xlp.postHttp("{:url('delete')}", {
                        id: data.id,
                    }, function (res) {
                        obj.del();
                        layer.close(index);
                        layer.msg('删除成功');
                    });
                });
            }else if(layEvent == 'edit') {
                location.href = "{:url('edit')}?id="+data.id;}
            else if(layEvent === 'status'){
                xlp.postHttp("{:url('status')}",{
                    id: data.id,
                    status: status
                },function (res) {
                    obj.update({'status': status});
                    if (status == 2) {
                        $(tr).find('.disable-btn').removeClass('layui-btn-danger');
                        $(tr).find('.disable-btn').text("开启");
                    }else{
                        $(tr).find('.disable-btn').addClass('layui-btn-danger');
                        $(tr).find('.disable-btn').text("关闭");
                    }
                })
            }
        });


        $("#addBtn").on('click', function () {
            location.href ="{:url('add')}";
        });
        //监听指定开关
        form.on('switch(switchTest)', function(data){
            value = this.value;
            if (data.elem.checked == true) {
                xlp.postHttp("{:url('status')}", {
                    id: value,
                    status: 2
                }, function (res) {
                    layer.msg("营业中");
                })
            }
            else{
                xlp.postHttp("{:url('status')}", {
                    id: value,
                    status: 1
                }, function (res) {
                    layer.msg("休息中");
                })
            }

        });




        //编辑排序
        table.on('edit(dataTable)', function(obj){
            xlp.postHttp("{:url('edit_sort1')}", {
                id: obj.data.id,
                sort: obj.value
            }, function(res) {
                layer.msg("修改成功");
            })
        });
        //一键上架
        $("#line").on('click', function () {
            xlp.postHttp("{:url('on_off_goods')}", {
                status: 1
            }, function(res) {
                layer.msg("修改成功");
            })
        });
        //一键下架
         $("#unline").on('click', function () {
            xlp.postHttp("{:url('on_off_goods')}", {
                status: 2
            }, function(res) {
                layer.msg("修改成功");
            })
        });
        //搜索
        form.on('submit(search)', function (data) {
            xlp.startLoading();
            dataTable.reload({
                where: {
                    fields: data.field
                }
                ,page: {
                    layout: ['limit', 'count', 'prev', 'page', 'next', 'skip']
                    ,groups: 5
                    ,first: false
                    ,last: false
                    ,curr: 1 //重新从第 1 页开始
                }
            });
            return false;
        });

        //搜索
        form.on('submit(search3)', function (data) {
            xlp.startLoading();
            dataTable.reload({
                where: {
                    fields: data.data.field
                }
                ,page: {
                    layout: ['limit', 'count', 'prev', 'page', 'next', 'skip']
                    ,groups: 5
                    ,first: false
                    ,last: false
                    ,curr: 1 //重新从第 1 页开始
                }
            });
            return false;
        });
    })
</script>
{/block}