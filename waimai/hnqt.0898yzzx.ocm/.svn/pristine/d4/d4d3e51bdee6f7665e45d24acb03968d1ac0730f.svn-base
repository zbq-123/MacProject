<script>
    layui.use(['element', 'layer', 'table', 'form', 'xlp'], function () {
        var $ = layui.jquery, element = layui.element, table = layui.table, layer = layui.layer, form = layui.form, xlp = layui.xlp;
        xlp.startLoading();

        //table生成
        var dataTable = table.render({
            elem: "#dataTable"
            ,url: "{:url('order/examine')}"
            ,response: {
                statusCode: 200
                ,msgName: 'message'
            }
            ,cols: [[

                {field:'id', width:80,title:'ID'},
                {field:'order_number', width:120, title:'订单编号'},
                {field:'store_name',width:80, title:'所属店铺',templet: "#storeTpl"},
                {field:'delivery_name',width:80, title:'收货人'},
                {field:'delivery_phone',width:120, title:'电话'},
                {field:'delivery_address',width:120, title:'收货地址'},
                {field:'total_price',width:80, title:'总价格',templet: "#priceTpl"},
                {field:'update_time',width:120, title:'更新时间'},
                {fixed: 'right',width:350, align:'center', toolbar: '#rightToolBar', title:'操作'}
            ]]
            ,page: {
                layout: ['limit', 'count', 'prev', 'page', 'next', 'skip']
                ,groups: 5
                ,first: false
                ,last: false
            }
            ,done: function (res, curr, count){
                xlp.reSetIframeHeight();
                xlp.closeLoading();
            }
        });

        //监听工具条
        table.on('tool(dataTable)', function(obj){
            var data = obj.data;
            var layEvent = obj.event;

            if(layEvent === 'pass'){ //撤销
                layer.confirm("确定不通过审核吗?", function(index){
                    xlp.postHttp("{:url('examine')}", {
                        id: data.id,
                        audit: 3,
                        money:data.old_balance,
                        store_id:data.store_id
                    }, function (res) {
                        obj.del();
                        layer.close(index);
                        layer.msg('操作成功');
                    });
                });
            }
           else if(layEvent === 'reject'){ //撤销
                layer.confirm("确定通过审核吗?", function(index){
                    xlp.postHttp("{:url('examine')}", {
                        id: data.id,
                        audit: 2,
                    }, function (res) {
                        obj.del();
                        layer.close(index);
                        layer.msg('操作成功');
                    });
                });
            }
        }

        );





        //编辑排序
        table.on('edit(dataTable)', function(obj){
            xlp.postHttp("{:url('edit_sort2')}", {
                id: obj.data.id,
                sort: obj.value
            }, function(res) {
                layer.msg("修改成功");
            })
        });
        //搜索
        form.on('submit(search)', function (data) {
            xlp.startLoading();
            dataTable.reload({
                where: {
                    fields: data.field
                }
                ,page: {
                    layout: ['limit', 'count', 'prev', 'page', 'next', 'skip']
                    ,groups: 5
                    ,first: false
                    ,last: false
                    ,curr: 1 //重新从第 1 页开始
                }
            });
            return false;
        });

        layui.use('table', function(){
            var table = layui.table;

            //监听表格复选框选择
            table.on('checkbox(dataTable)', function(obj){
                console.log(obj)
            });

            var $ = layui.$, active = {
                getCheckData: function(){ //获取选中数据
                    var checkStatus = table.checkStatus('dataTable')
                        ,arr =new Array
                        ,data = checkStatus.data
                        ,i =checkStatus.data.length;
                    for(var k=0;k<i;k++){
                        arr[k]=data[k]['id'];
                    }
                    /*    layer.msg('选中了：'+data.length+'个'+arr);*/


                    layer.confirm("确定批量审核通过吗?", function(index){
                        for(var k=0;k<i;k++){
                            xlp.postHttp("{:url('Audit/news')}", {
                                    id: arr[k],
                                    audit:1,
                                }
                                , function (res) {
                                });
                        }
                        layer.close(index);
                        layer.msg('审核成功');
                        location.reload();
                    });


                }

            };

            $('.demoTable .layui-btn').on('click', function(){
                var type = $(this).data('type');
                active[type] ? active[type].call(this) : '';
            });
        });
    })
</script>
{/block}
