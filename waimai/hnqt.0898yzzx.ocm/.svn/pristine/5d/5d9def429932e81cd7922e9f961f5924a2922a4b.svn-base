<script>
    layui.use(['element', 'form'], function () {
        var $ = layui.$, element = layui.element, form = layui.form;

        form.on('checkbox(parent)', function(data){
            $(data.elem).parent().eq(0).find("input[type='checkbox']").prop("checked", data.elem.checked);
            if (data.elem.checked) {
                $(data.elem).parent().eq(0).find('.layui-form-checkbox').addClass("layui-form-checked");
            }else {
                $(data.elem).parent().eq(0).find('.layui-form-checkbox').removeClass("layui-form-checked");
            }
        });
        form.on('checkbox(child)', function(data){
            $(data.elem).parent().eq(0).find("input[type='checkbox']").prop("checked", data.elem.checked);
            if (data.elem.checked) {
                $(data.elem).parent().eq(0).find('.layui-form-checkbox').addClass("layui-form-checked");
            }else {
                $(data.elem).parent().eq(0).find('.layui-form-checkbox').removeClass("layui-form-checked");
            }
        });
        reSetIframeHeight();
    })
