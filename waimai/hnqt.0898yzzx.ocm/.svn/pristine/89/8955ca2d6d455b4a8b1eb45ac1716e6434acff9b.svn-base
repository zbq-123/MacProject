<!DOCTYPE html>
<html>

<head>
    {include file="common/meta" /}
    <title>来客统计</title>

    <!--标准mui.css-->
    <link href="__STATIC__/store/store-css/order.css" rel="stylesheet" />
    <link href="__STATIC__/store/mui/css/mui.picker.css" rel="stylesheet" />
    <link href="__STATIC__/store/mui/css/mui.poppicker.css" rel="stylesheet" />
    <link rel="stylesheet" type="text/css" href="__STATIC__/store/mui/css/mui.picker.min.css" />
    <link rel="stylesheet"  type="text/css" href="__STATIC__/layui/css/layui.css">
    <!--App自定义的css-->
    <style>
        body{
            /*background: white;*/
        }
    </style>
</head>

<body>
<!--顶部标题 start-->
<header id="header" class="mui-bar mui-bar-nav">
    <a href="../home/home.html" class="mui-action-back mui-btn mui-btn-blue mui-btn-link mui-btn-nav mui-pull-left"><span class="mui-icon mui-icon mui-icon-left-nav title-refresh-icon"></span><span>返回</span></a>
    <h1 class="mui-title">来客统计</h1>
</header>
    <div style="margin-top: 50px">
        <table class="layui-table" lay-size="lg" lay-skin="line" style="text-align: center;">
          <thead>
            <tr>
              <th style="text-align: center;"><span>用户</span></th>
              <th style="text-align: center;"><span>联系电话</span></th>
              <th style="text-align: center;"><span>订单数</span></th>
            </tr> 
          </thead>
          <tbody>
            {volist name="orderSum" id="vo"}
                <tr class="layui-bg-blue">
                    <td><b>{$vo.user_name}</b></td>
                    <td><a href="tel:{$vo.phone}"><b>{$vo.phone}</b></a></td>
                    <td><b>{$vo.num}</b></td>
                </tr>
            {/volist}
          </tbody>
        </table>
    </div>
</body>
{include file="common/script" /}
<script src="__STATIC__/store/mui/js/mui.picker.js"></script>
<script src="__STATIC__/store/mui/js/mui.picker.min.js"></script>
<script src="__STATIC__/store/mui/js/mui.poppicker.js"></script>
<script src="__STATIC__/jquery/jquery-1.8.3.min.js"></script>

<!--解决 a 标签不能跳转-->
<script>
    mui('body').on('tap','a',function(){
        document.location.href=this.href;
    })

</script>

</html>