{extend name="public/public_main" /}
{block name="content"}
<fieldset class="layui-elem-field layui-field-title">
    <legend>骑手管理</legend>
</fieldset>
<!--headToolBar-->
<div class="tip-btn-line">
    <div class="layui-btn layui-btn-sm xu-icon-btn" onclick="javascript: location.reload();"><i class="layui-icon">&#xe669; </i>刷新</div>
    <div class="layui-btn layui-btn-sm xu-icon-btn" id="addBtn"><i class="layui-icon">&#xe608;</i>添加</div>
    <!--搜索表单-->
    <form action="" class="layui-form search-form">
        <div class="layui-form-item">
            <div class="layui-inline">
                <div class="layui-input-inline">
                    <input type="text" name="field_content" placeholder="骑手名称/手机号搜索" autocomplete="off" class="layui-input">
                    <input type="text" name="field_name" hidden value="name">
                </div>
                <div class="layui-input-inline">
                    <button class="layui-btn layui-btn-primary" lay-submit lay-filter="search"><i class="layui-icon">&#xe615;</i></button>
                </div>
            </div>
        </div>
    </form>

</div>
<!--table-->
<table class="layui-table" id="dataTable" lay-filter="dataTable"></table>
{/block}
{block name="script"}
<!--toolBar-->

<script type="text/html" id="pictureTpl">
    {{#  if(d.logo != null){  }}
    <img class="xu-title-pic" src="{{d.logo}}">
    {{# }  }}
</script>

<!--typeNameTpl-->
<script type="text/html" id="campusNameTpl">
    {{#  if(d.campus.name != undefined){ }}
    <span>{{d.campus.name}}</span>
    {{#  } else { }}
    <span>无</span>
    {{# } }}
</script>



<script type="text/html" id="rightToolBar">
    <a class="layui-btn layui-btn-sm" lay-event="order">订单列表</a>
    <a class="layui-btn layui-btn-sm" lay-event="income">收益明细</a>
    <a class="layui-btn layui-btn-sm" lay-event="edit">修改</a>
    <a class="layui-btn layui-btn-sm layui-btn-danger" lay-event="delete">删除</a>
</script>

<script>
    layui.use(['element', 'layer', 'table', 'form', 'xlp'], function () {
        var $ = layui.jquery, element = layui.element, table = layui.table, layer = layui.layer, form = layui.form, xlp = layui.xlp;
        xlp.startLoading();

        //table生成
        var dataTable = table.render({
            elem: "#dataTable"
            ,url: "{:url('index')}"
            ,response: {
                statusCode: 200
                ,msgName: 'message'
            }
            ,cols: [[
                {field:'id', width:80,title:'ID'},
                {field:'user_name', title:'骑手名称'},
                {field:'wx_code', title:'微信收款码',templet: function (res){
                    return '<img src='+res.wx_code+'>'
                }},
                {field:'campus_id', title:'所属校区', templet: "#campusNameTpl"},
                {field:'phone', title:'手机号'},
                {field:'balance', title:'余额'},
                {field:'create_time', title:'创建时间'},
                {field:'update_time', title:'更新时间'},
                {fixed: 'right',width:350, align:'center', toolbar: '#rightToolBar', title:'操作'}


            ]]
            ,page: {
                layout: ['limit', 'count', 'prev', 'page', 'next', 'skip']
                ,groups: 5
                ,first: false
                ,last: false
            }
            ,done: function (res, curr, count){
                xlp.reSetIframeHeight();
                xlp.closeLoading();
            }
        });


        //监听工具条
        table.on('tool(dataTable)', function(obj){
            var data = obj.data;
            var layEvent = obj.event;

            if(layEvent === 'delete'){ //撤销
                layer.confirm("确定删除吗?", function(index){
                    xlp.postHttp("{:url('delete_rider')}", {
                        id: data.id,
                    }, function (res) {
                        obj.del();
                        layer.close(index);
                        layer.msg('删除成功');
                    });
                });
            }else if(layEvent == 'edit') {
                location.href = "{:url('edit_rider')}?id="+data.id;}
            else if(layEvent == 'order') {
                location.href = "{:url('order')}?id="+data.id;}
            else if(layEvent == 'income') {
                location.href = "{:url('income')}?id="+data.id;}
            else if(layEvent === 'status'){
                xlp.postHttp("{:url('status')}",{
                    id: data.id,
                    status: status
                },function (res) {
                    obj.update({'status': status});
                    if (status == 2) {
                        $(tr).find('.disable-btn').removeClass('layui-btn-danger');
                        $(tr).find('.disable-btn').text("开启");
                    }else{
                        $(tr).find('.disable-btn').addClass('layui-btn-danger');
                        $(tr).find('.disable-btn').text("关闭");
                    }
                })
            }
        });


        $("#addBtn").on('click', function () {
            location.href ="{:url('add_rider')}";
        });
        //监听指定开关
        form.on('switch(switchTest)', function(data){
            value = this.value;
            if (data.elem.checked == true) {
                xlp.postHttp("{:url('status')}", {
                    id: value,
                    status: 2
                }, function (res) {
                    layer.msg("营业中");
                })
            }
            else{
                xlp.postHttp("{:url('status')}", {
                    id: value,
                    status: 1
                }, function (res) {
                    layer.msg("休息中");
                })
            }

        });

        //监听退款开关
        form.on('switch(switchReunt)', function(data){
            value = this.value;
            console.log(data);
            if (data.elem.checked == true) {
                xlp.postHttp("{:url('is_refund')}", {
                    id: value,
                    status: 0
                }, function (res) {
                    layer.msg("店铺允许退款");
                })
            }
            else{
                xlp.postHttp("{:url('is_refund')}", {
                    id: value,
                    status: 1
                }, function (res) {
                    layer.msg("店铺不允许退款");
                })
            }

        });


        //编辑排序
        table.on('edit(dataTable)', function(obj){
            xlp.postHttp("{:url('edit_sort')}", {
                id: obj.data.id,
                sort: obj.value
            }, function(res) {
                layer.msg("修改成功");
            })
        });
        //搜索
        form.on('submit(search)', function (data) {
            xlp.startLoading();
            dataTable.reload({
                where: {
                    fields: data.field
                }
                ,page: {
                    layout: ['limit', 'count', 'prev', 'page', 'next', 'skip']
                    ,groups: 5
                    ,first: false
                    ,last: false
                    ,curr: 1 //重新从第 1 页开始
                }
            });
            return false;
        });

        //搜索
        form.on('submit(search3)', function (data) {
            xlp.startLoading();
            dataTable.reload({
                where: {
                    fields: data.data.field
                }
                ,page: {
                    layout: ['limit', 'count', 'prev', 'page', 'next', 'skip']
                    ,groups: 5
                    ,first: false
                    ,last: false
                    ,curr: 1 //重新从第 1 页开始
                }
            });
            return false;
        });
    })
</script>
{/block}