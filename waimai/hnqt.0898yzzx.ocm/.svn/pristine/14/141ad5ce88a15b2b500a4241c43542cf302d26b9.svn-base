<!DOCTYPE html>
<html>
<head>
    {include file="common/meta" /}
    <link rel="stylesheet" href="__STATIC__/client/css/page-user-address-list.css">
</head>
<style type="text/css">
	.userBtn{
		font-size:13px;display:inline-block;padding:2px 10px;border-radius:20px;background-color:#fff;color: rgb(255,85,117);
	}
</style>
<body>
<header class="mui-bar mui-bar-nav">
    <a class="mui-action-back mui-icon mui-icon-left-nav mui-pull-left"></a>
    <h1 class="mui-title">我的优惠券</h1>
    <a class="mui-btn mui-btn-link mui-pull-right" ></a>
</header>
<div class="mui-content">

	{volist name='coupons' id="vo"}
	<div class="address-panel" style="background-color:rgba(255,85,117,0.9);">
	    <div class="address-detail-panel" onclick="navTo({$vo.seller_id})">
	        <div class="panel-address-info">
	            <div class="address" style="color:#fff;">满{$vo.full_money}使用立减 {$vo.discount_money} 元</div>
	            <div class="user-info" style="color:#fff;">使用期限：{$vo.start_time} - {$vo.end_time}</div>
	        </div>
	        <span class="userBtn">去使用</span>
	    </div>
	</div>
	{/volist}
	
</div>
</body>
{include file="common/script" /}
<script>
	function navTo(id){
		//这里是传店铺id跳转到商家页，相当于首页点击了商家
		if(id == 0){
		 jQuery(parent.location).attr('href',"{:url('/client/index')}");
		}else{
		 jQuery(parent.location).attr('href',"{:url('store/index')}?store_id="+id);
		}
	}
</script>
</html>