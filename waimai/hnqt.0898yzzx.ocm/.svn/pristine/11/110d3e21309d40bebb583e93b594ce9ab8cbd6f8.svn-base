                }
            },
            jump_url: function(value){
                if(value.length > 255 ){
                    return '限制255个字符且不为空';
                }
            }

        });



        upload.render({
            elem: '#image'
            ,url: "<?php echo url('upload/carouselImage'); ?>"
            ,size: 1024*5
            ,done: function(res, index, upload){
                if(res.code == 200){
                    $("#imageUrl").val(res.data);
                    $("#image").html("<img src='"+res.data+"' width='150' height='95'>");
                    $("#image").css({"padding": "0"});
                }
            }
        });
    })
</script>

