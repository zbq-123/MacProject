/*头像部分*/
html,body{
    background: #fcfcfd;
}

.user-header{
    background-color:#42CA47;
    background-image: linear-gradient(-45deg, #43cc48, #48d94c, #4ce551);
    display: flex;
    position: relative;
    align-items: center;
    padding: 0px 15px 30px 15px;
    width: 100%;
    height: 150px;
    z-index: 1;
}

.user-header .user-img{
    width: 50px;
    height: 50px;
    border-radius: 100%;
}

.user-header .user-info{
    margin-left: 8px;
}

.user-header .user-info .nickname{
    font-size: 16px;
    line-height: 20px;
    height: 20px;
    margin-bottom: 8px;
    display: flex;
    align-items: center;
    color: #333;
}

.user-header .user-info .nickname span{
    font-size: 16px;
    font-weight: bold;
    line-height: 20px;
    height: 20px;
}

.user-header .user-info .nickname img{
    margin-left: 8px;
    width: 16px;
    height: 16px;
    margin-bottom: 4px;
    opacity: 0.6;
}

.user-header .user-info .id{
    font-size: 14px;
    line-height: 14px;
}

.user-header .user-info .id img{
    width: 12px;
    height: 12px;
    margin-bottom: 2px;
}

.user-header .user-info .id span{
    color: #666666;
}

.user-header .user-more{
    position: absolute;
    right: 0;
    top: 40px;
    height: 22px;
    font-size: 12px;
    line-height: 22px !important;
    background: #48d94c;
    background-image: linear-gradient(90deg, #43CD46, #48d94c, #4ce551);
    border-radius: 10px 0 0 10px;
    padding: 0px 15px;
    text-align: center;
}

/*数值部分*/

.user-number{
    position: absolute;
    width: calc(100vw - 30px);
    box-shadow:0px 4px 4px 0px #f9f9fa;
    margin: -30px 15px 15px 15px;
    background: #fff;
    border-radius: 8px;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 9;
    height: 60px;
}
.user-number .card{
    width: 33%;
    text-align: center;
    align-content: center;
}

.user-number .card .card-name{
    color: #999999;
    font-size: 12px;
    line-height: 18px;
}

.user-number .card .card-number{
    color: #333333;
    font-size: 18px;
    line-height: 18px;
    font-weight: bold;
}

.user-item-p{
    margin-top: 45px;
}

.user-item{
    margin: 15px 15px 0 15px;
    background: #fff;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 15px 15px;
    border-radius: 8px;
    box-shadow:0 0 4px 4px #f9f9fa;
}

.user-item .item-info{
    display: flex;
    align-items: center;
    justify-content: left;
}

.user-item .item-info .item-img{
    width: 20px;
    height: 20px;
}

.user-item .item-info .item-name{
    color: #333333;
    font-size: 15px;
    margin-left: 10px;
}

.user-item .mui-icon-forward{
    color: #999999;
    font-size: 16px;
}