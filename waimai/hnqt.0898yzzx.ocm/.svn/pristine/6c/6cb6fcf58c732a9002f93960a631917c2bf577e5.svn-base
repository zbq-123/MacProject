{extend name="public/popup" /}
{block name="content"}
<a class="layui-btn layui-btn-primary layui-btn-sm xu-icon-btn" href="{:url('order')}"><i class="layui-icon">&#xe603;</i>返回</a>
<fieldset class="layui-elem-field layui-field-title">

    <legend>修改状态</legend>
</fieldset>
<form class="layui-form layui-form-edit" action="{:url('edit_status')}" method="post" lay-filter="newsForm">

    <div class="layui-form-item">

        <label class="layui-form-label">订单状态</label>

        <div class="layui-input-inline layui-form" lay-filter="fixedIdSelect">
            <select name="status"  lay-verify="required" lay-filter="fixedId" lay-search>

                <option value="1" {eq name="statuss.status" value="1"}selected{/eq}>提交订单</option>
                <option value="2" {eq name="statuss.status" value="2"}selected{/eq}>等待接单</option>
                <option value="3" {eq name="statuss.status" value="3"}selected{/eq}>确认订单</option>
                <option value="7" {eq name="statuss.status" value="7"}selected{/eq}>完成订单</option>
                <option value="9" {eq name="statuss.status" value="9"}selected{/eq}>退款成功</option>
                <option value="10" {eq name="statuss.status" value="10"}selected{/eq}>退款失败</option>
                <option value="11" {eq name="statuss.status" value="11"}selected{/eq}>商家退款申请</option>
                <option value="12" {eq name="statuss.status" value="12"}selected{/eq}>商家退款成功</option>
                <option value="13" {eq name="statuss.status" value="13"}selected{/eq}>商家退款失败</option>
                <option value="14" {eq name="statuss.status" value="14"}selected{/eq}>取消订单</option>
                <option value="15" {eq name="statuss.status" value="15"}selected{/eq}>商家拒单</option>


            </select>
        </div>


        <input type="hidden" name="id" value="{$statuss.id}">

        <div class="layui-form-item"></div>



        <div class="layui-form-item">
            <div class="layui-input-block">
                <button class="layui-btn" lay-submit lay-filter="save">保存</button>
                <!--        <button class="layui-btn layui-btn-primary" lay-submit lay-filter="audit">提交审核</button>-->
                <button class="layui-btn layui-btn-primary" lay-submit lay-filter="cancel">取消</button>
            </div>
        </div>

    </div>
</form>
{/block}
{block name="script"}
<script type="text/javascript"
        src="__STATIC__/ueditor/ueditor.config.js?version={$Think.config.web_config.site_version}"></script>
<script type="text/javascript"
        src="__STATIC__/ueditor/ueditor.all.js?version={$Think.config.web_config.site_version}"></script>
<script>
    layui.use(['element', 'form', 'upload', 'xlp'], function () {
        var $ = layui.jquery, element = layui.element, form = layui.form, upload = layui.upload, xlp = layui.xlp;


        //自定义验证规则
        form.verify({
            name: function(value){
                if(value.length > 100 ){
                    return '限制100个字符且不为空';
                }
            }

        });

        //输入图片上传按钮序号初始化上传组件


        upload.render({
            elem: '#picture1'
            , url: "{:url('upload/goods')}"
            , size: 2048
            , done: function (res, index, upload) {
                if (res.code == 200) {
                    $("#titlePicture1").find("input[name='image']").eq(1 - 1).val(res.data);
                    $("#picture1" ).html("<img src='" + res.data + "' width='138' height='95'>");
                    $("#picture1" ).css({"padding": "0"});
                }

                //获取当前触发上传的元素，一般用于 elem 绑定 class 的情况，注意：此乃 layui 2.1.0 新增
                var item = this.item;
            }
        });
        $("#picture1" ).css({"display": "inline-block"});


        form.on("submit(cancel)", function (data) {
            location.href = "{:url('order')}";
            return false;
        });
    })

</script>

