<!DOCTYPE html>
<html style="font-size: 54px;">
<head>
    {include file="common/meta" /}
    <link rel="stylesheet" href="__STATIC__/client/css/page-store-index.css?v=1.2">
</head>
<style type="text/css">
	.store-summary .sotre-summary-info{
		padding-bottom:5px;
	}
	#client_youhuij{
		margin-bottom:10px;
		padding:0 10px;
		overflow-x: auto;
	}
	.youhuilist{
		padding:4px 5px;
		border-radius:20px;
		color:#fff;
		font-size:13px;
		display:inline-block;
		margin-right:10px;
	}
	.yes{
		background-color:rgb(240,52,93);
	}
	.no{
		background-color:rgba(0,0,0,0.3);
	}
    .spec {
        width: 100%;margin-top: 25px;
    }
    .spec li{
        font-size: 14px;color: #666;
    }
    .spec li ul{
        margin: 5px 0 25px;
    }
    .spec li ul li{
        display: inline-block;
    margin: 0 10px 0 0;
    border: 1px solid #f1efef;
    padding: 0px 18px;
    border-radius: 5px;
    font-size: 12px;
    }

    .spec li ul .active{
        border: 1px solid #f0ad4e!important;
        color: #c75245!important;
        background-color: #f7c782!important;
    }
    .cart-item-info-spec{
        font-size: 12px;
        color: #999;
    }
</style>
<body>
    <div class="layui-form  search-form" action="{:url('add_xls')}" id="addXls" style="margin-top:9px;padding-bottom:50px;" method="post" hidden >
        <div style="width: 100%;padding: 10px 15px;">
            <!-- 菜品 -->
            <p><h3 style="font-size: 18px; font-weight: 700;" id="title">草莓甜心</h3></p>
            <!-- 规格 -->
            <ul class="spec">
                <li>
                    <span>份量</span>
                    <ul>
                        <li class="active" id="key1-">大杯</li>
                        <li>中杯</li>
                        <li>小杯</li>
                    </ul>
                </li>

                <li>
                    <span>温度</span>
                    <ul>
                        <li class="active">大杯</li>
                        <li>中杯</li>
                        <li>小杯</li>
                    </ul>
                </li>

                <li><span>糖</span>
                    <ul>
                        <li class="active">大杯</li>
                        <li>中杯</li>
                        <li>小杯</li>
                    </ul>
                </li>

                <li><span>加料</span>
                    <ul>
                        <li class="active">大杯</li>
                        <li>中杯</li>
                        <li>小杯</li>
                    </ul>
                </li>
            </ul>
        </div>
        <div style="background: #f5f3f3;padding: 4px 20px;font-size: 14px;color: #999;position: absolute;bottom: 38px;width: 100%;">
            <span>已选规格：</span><span style="color: #333;" id="yx">大杯、冰、常规糖、常规</span>
        </div>
        <div style="position: absolute;bottom: 1px;width: 100%;line-height: 38px;">
            <span style="margin-left: 20px;font-size: 14px;font-weight: 700;">总计:</span>
            <span style="font-size:14px; color: red;">¥</span>
            <span style="color:red" id="jg">22</span>
            <!-- <a style="font-size: 12px;padding: 2px 8px;position: absolute;right: 10px;top: 10px;background: #e9b468;color: #333;font-weight: 700;border: 0;line-height: 20px;border-radius: 4px;" onclick="tj()" class="layui-layer-close layui-layer-close1">+ 加入购物车</a> -->
            <div class="mui-numbox" id="spec_numbox" data-numbox-min='0' style="position:absolute; top: 8px; right: 18px;">
                <button class="mui-btn mui-btn-numbox-minus" type="button"><img src="__STATIC__/client/icon/new_jian.png"></button>
                <input id="goods64" onchange="showNumber(jQuery(this),10)" data-price="0.00" data-goods_id="64" data-category_id="1"  class="spec-out numbox-out mui-input-numbox number-hidden" type="number" value="0" data-spec_price_id="" readonly  style="position:absolute" />
                
                <button class="mui-btn mui-btn-numbox-plus"  onclick="MoveBox(jQuery(this))" type="button"><img src="__STATIC__/client/icon/new_plus.png"></button>
                
            </div>
        </div>
    </div>
    <div class="mui-content">
        <div class="store-summary">
            <div class="sotre-summary-info">
                <div class="summary-name">{$store.name}</div>
                <div class="summary-ps">起送价¥{$store.min_price/100} / {$store.delivery_name}¥{$store.delivery_price/100}</div>
                <div class="summary-notice">
                    <div class="notice-title">公告：</div>
                    <div class="notice-content">{$store.notice}</div>
                </div>
            </div>
            <img class="summary-img" src="{$store.logo}" />
        </div>
		<div id="client_youhuij">
			<div class="youhuijwrap">
			    {volist name='coupons' id='vo'}
				    <div {if in_array($user_id,$vo.users)} class="youhuilist no" {else} class="youhuilist yes" onclick="lingqu({$vo.id})"{/if} ><span>领 </span>满{$vo.full_money}减<span>{$vo.discount_money}</span>元</div>
				{/volist}
			</div>
		</div>
        <div>
            <div id="segmentedControl" class="mui-segmented-control mui-segmented-control-inverted">
                <a class="mui-control-item mui-active" href="#tab1" onclick="tabChange(1)"><span>点菜</span></a>
                <a class="mui-control-item" href="#tab2" onclick="tabChange(2)"><span>商家</span></a>
            </div>
        </div>
        <div>
            <div id="tab1" class="mui-control-content mui-active">
                <div style="display: flex;">
                    <!-- 菜单 -->
                    <ul class="menus" style="padding-bottom: 50px;">
                        <!--<li>
                            <a href="#l1" class="menu" onclick="aSkip($(this))">清新素粥<span class="mui-badge menu-badge">1</span></a>
                        </li>
                        <li>
                            <a href="#l2" class="menu" onclick="aSkip($(this))">滋养甜粥<span class="mui-badge menu-badge">8</span></a>
                        </li>
                        <li>
                            <a href="#l3" class="menu" onclick="aSkip($(this))">特色点心</a>
                        </li>-->
                        {volist name='goods_list' id='vo'}
                        <li>
                            <a id="menus{$vo.category_id}" href="#c{$vo.category_id}" class="menu" onclick="aSkip(jQuery(this))">{$vo.name}</a>
                        </li>
                        {/volist}
                    </ul>
                    <!-- 商品列表 -->
                    <div class="all_list" style="padding-bottom: 50px;">
                        {volist name='goods_list' id='vo'}
                        <div class="type" id="c{$vo.category_id}">
                            <p class="title">{$vo.name}</p>
                            <ul>
                                {volist name='vo.goods' id='goods'}
                                <li>
                                    <div class="goods-item">
                                        <div class="goods-item-img">
                                            <img class="goods-item-img-img" src="{$goods.image}" />
                                            {notempty name="goods.tag"}<div class="goods-item-img-tag">{$goods.tag}</div>{/notempty}
                                        </div>
                                    
                                        <div class="goods-item-info">
                                            <div class="goods-item-info-title">{$goods.name}</div>
                                            <div class="goods-item-info-sale" sto="{$goods.stock ? $goods.stock : 0 }">已售{$goods.sale} | 库存{$goods.stock ? $goods.stock : 0 }</div>
                                            <div class="goods-item-price">¥{$goods.price/100}</div>
                                        </div>
                                        <div class="goods-item-btn">
                                       <div class="mui-numbox" data-numbox-min='0' id="mui-numbox-{$goods.goods_id}" style="{$goods.spec ?'display:none':''}" >
                                            <button class="mui-btn mui-btn-numbox-minus" type="button"><img src="__STATIC__/client/icon/new_jian.png"></button>
                                            <input id="goods{$goods.goods_id}" onchange="showNumber(jQuery(this),{$goods.stock})" data-price="{$goods.price}" data-goods_id="{$goods.goods_id}" data-category_id="{$vo.category_id}" class="numbox-out mui-input-numbox number-hidden" type="number" value="0" readonly  data-only-one="{$goods.is_only_one}"/>
                                            
                                            <button class="mui-btn mui-btn-numbox-plus" style="{$goods.stock ? '' :'display:none' }" onclick="MoveBox(jQuery(this))" type="button"><img src="__STATIC__/client/icon/new_plus.png"></button>
                                            
                                        </div>
                                        <button class="mui-btn mui-btn-numbox-plus spec-btn" style="{$goods.spec ?'':'display:none' } ;font-size: 12px;width: auto;border: 1px solid #f0ad4e;border-radius: 10px;color: #f7f7f7;background: #e3972c;padding: 2px 5px;" type="button" value='{$goods.spec}' id="spec-btn-{$goods.goods_id}" name="{$goods.name}">选规格</button>
                                        </div>
                                    </div>
                                </li>
                                {/volist}
                            </ul>
                        </div>
                        {/volist}
                    </div>
                </div>
            </div>
            <div id="tab2" class="mui-control-content">
                <div class="store-introduce">
                    <div class="store-introduce-card">
                        <div class="introduce-name">{$store.name}</div>
                        <div class="introduce-location">{$store.address}</div>
                        <div class="introduce-title">商家信息</div>
                        <div class="introduce-info">所在校区：{$store.campus_name}</div>
                        <div class="introduce-info">
                            营业时间：{eq name="store.time1_status" value="1"}{$store.start_time1|substr=0,5}-{$store.end_time1|substr=0,5}&nbsp;{/eq}
                            {eq name="store.time2_status" value="1"}{$store.start_time2|substr=0,5}-{$store.end_time2|substr=0,5}&nbsp;{/eq}
                            {eq name="store.time3_status" value="1"}{$store.start_time3|substr=0,5}-{$store.end_time3|substr=0,5}&nbsp;{/eq}
                        </div>
                        <div class="introduce-info">当前状态：{eq name="store.open" value="1"}营业中{else/}休息中{/eq}</div>
                    </div>
                    <div class="store-introduce-card">
                        <div class="introduce-title">商家描述</div>
                        <div class="introduce-info">{$store.detail}</div>
                    </div>
                    <a class="store-introduce-phone" href="tel:{$store.phone}">
                        <img src="__STATIC__/client/icon/icon-phone.png">
                        <span>联系商家</span>
                    </a>
                </div>
            </div>
        </div>

        <div class="cart-goods-list mui-hidden">
            <div class="cart-goods-top">
                <div class="top-title">已选商品</div>
                <div class="top-btn" onclick="clearCart()"><img src="__STATIC__/client/icon/icon-del.png"><span>清空</span></div>
            </div>
            <div class="cart-item-list">

            </div>
            <div class="box-panel">
            </div>
        </div>
        <div class="store-bottom">
            <div class="store-buy">
                <img class="store-buy-img" src="__STATIC__/client/icon/new_box.png" />
            </div>
            <div class="store-price">
                <div class="store-goods-price mui-hidden"></div>
                <div class="store-goods-tip">未选购商品</div>
                <div class="store-ps-price">另需{$store.delivery_name}¥{$store.delivery_price/100}</div>
            </div>
            <div class="store-submit hsst-background-gray">{eq name="store.open" value="0"}休息中{else/}¥{$store.min_price/100}起送{/eq}</div>
        </div>
    </div>
</body>

{include file="common/script" /}
<script src="__STATIC__/layui/layui.js?v={$Think.config.web_config.site_version}" charset="utf-8"></script>
<script src="__STATIC__/jquery/jquery.mobile-1.4.4.min.js"></script>
<script src="__STATIC__/jquery/jquery.fly.min.js"></script>
<script>

    layui.config({
        base: '__JS__/' //layui全局设置
        ,version: '{$Think.config.web_config.site_version}'
    });
    layui.use(['jquery','element','layer','xlp'], function(){
        var element = layui.element;
        var $ = layui.jquery, layer = layui.layer, xlp = layui.xlp;
        var json_arr = '';
        // 选规格
        $('.spec-btn').on('click', function(res){
            json_arr = this.value;
            $('#title').html(this.name)
            var obj = JSON.parse(json_arr);
            // $('#goods_id').val(obj.goods_id)
            let _h = ''
            let key1 = '';//选中的规格1
            let key2 = '';//选中的规格2
            let key3 = '';//选中的规格3
            let key4 = '';//选中的规格4
            let str = '';
            // 第一个规格
            if(obj.spec_id_1){
                _h += '<li>'
                // 规格ID
                let spec_id = obj.spec_id_1
                _h += '<span>'+obj.spec_name_1+'</span>'
                // 规格项
                if(obj.items[spec_id]){
                     _h += '<ul>'
                     for(let i=0;i<obj.items[spec_id].length;i++){
                       if(i==0){
                            _h += '<li class="active" id="key1-'+obj.items[spec_id][i]['id']+'" onclick="change_spec('+obj.goods_id+','+obj.items[spec_id][i]['id']+',1)">'+obj.items[spec_id][i]['item']+'</li>'
                            str += obj.items[spec_id][i]['item'];
                            key1 = obj.items[spec_id][i]['item'];
                        }else{
                            _h += '<li id="key1-'+obj.items[spec_id][i]['id']+'" name="'+obj.items[spec_id][i]['id']+'" onclick="change_spec('+obj.goods_id+','+obj.items[spec_id][i]['id']+',1)">'+obj.items[spec_id][i]['item']+'</li>'
                        }
                     }
                     _h += '</ul></li>'
                }
                _h += '</li>'
            }
            // 第二个规格
            if(obj.spec_id_2){
                _h += '<li>'
                // 规格ID
                let spec_id = obj.spec_id_2
                _h += '<span>'+obj.spec_name_2+'</span>'
                // 规格项
                if(obj.items[spec_id]){
                     _h += '<ul>'
                     for(let i=0;i<obj.items[spec_id].length;i++){
                        if(i==0){
                            _h += '<li class="active" id="key2-'+obj.items[spec_id][i]['id']+'" onclick="change_spec('+obj.goods_id+','+obj.items[spec_id][i]['id']+',2)">'+obj.items[spec_id][i]['item']+'</li>'
                            str += '、'+obj.items[spec_id][i]['item'];
                            key2 = obj.items[spec_id][i]['item'];
                        }else{
                            _h += '<li id="key2-'+obj.items[spec_id][i]['id']+'" onclick="change_spec('+obj.goods_id+','+obj.items[spec_id][i]['id']+',2)">'+obj.items[spec_id][i]['item']+'</li>'
                        }
                       
                     }
                     _h += '</ul></li>'
                }
                _h += '</li>'
            }
            // 第三个规格
            if(obj.spec_id_3){
                _h += '<li>'
                // 规格ID
                let spec_id = obj.spec_id_3
                _h += '<span>'+obj.spec_name_3+'</span>'
                // 规格项
                if(obj.items[spec_id]){
                     _h += '<ul>'
                     for(let i=0;i<obj.items[spec_id].length;i++){
                       if(i==0){
                            _h += '<li class="active" id="key3-'+obj.items[spec_id][i]['id']+'" onclick="change_spec('+obj.goods_id+','+obj.items[spec_id][i]['id']+',3)">'+obj.items[spec_id][i]['item']+'</li>'
                            str += '、'+obj.items[spec_id][i]['item'];
                            key3 = obj.items[spec_id][i]['item'];
                        }else{
                            _h += '<li id="key3-'+obj.items[spec_id][i]['id']+'" onclick="change_spec('+obj.goods_id+','+obj.items[spec_id][i]['id']+',3)">'+obj.items[spec_id][i]['item']+'</li>'
                        }
                     }
                     _h += '</ul></li>'
                }
                _h += '</li>'
            }
            // 第四个规格
            if(obj.spec_id_4){
                _h += '<li>'
                // 规格ID
                let spec_id = obj.spec_id_4
                _h += '<span>'+obj.spec_name_4+'</span>'
                // 规格项
                if(obj.items[spec_id]){
                     _h += '<ul>'
                     for(let i=0;i<obj.items[spec_id].length;i++){
                       if(i==0){
                            _h += '<li class="active" id="key4-'+obj.items[spec_id][i]['id']+'" onclick="change_spec('+obj.goods_id+','+obj.items[spec_id][i]['id']+',4)">'+obj.items[spec_id][i]['item']+'</li>'
                            str += '、'+obj.items[spec_id][i]['item'];
                            key4 = obj.items[spec_id][i]['item'];
                        }else{
                            _h += '<li id="key4-'+obj.items[spec_id][i]['id']+'" onclick="change_spec('+obj.goods_id+','+obj.items[spec_id][i]['id']+',4)">'+obj.items[spec_id][i]['item']+'</li>'
                        }
                     }
                     _h += '</ul></li>'
                }
                _h += '</li>'
            }

            $('.spec').html(_h)
            $('#yx').html(str)

            // 修改input属性
           $('.spec-out').attr('id','goods'+obj.goods_id)
            // 获取规格
            $.ajax({
                 type: "GET",
                 url: "/client/api/get_spec",
                 data: {goods_id:obj.goods_id,spec_name_1:key1,spec_name_2:key2,spec_name_3:key3,spec_name_4:key4},
                 dataType: "json",
                 success: function(data){
                    if(data){
                        $('#spec_numbox').show();
                        $('.spec-out').attr('data-price',data.price*100);
                        $('.spec-out').attr('data-spec-price-id',data.id)
                        $('#jg').html(data.price)
                    }else{
                        $('#spec_numbox').hide();
                        $('#jg').html('0.00')
                    }
                }
             });
           
           $('.spec-out').attr('data-goods_id',obj.goods_id)
           $('.spec-out').attr('data-category_id',obj.goods_id)
           // 数量
           $('.spec-out').val(jQuery('#goods'+obj.goods_id).val());
            layer.open({
                type: 1
                //,area: ['400px', '300px']
                ,area: ['90%','60%']
                ,title: '选规格'
                ,content: $('#addXls')
            });
        
        });


    })
    
    // 改变规格
    function change_spec(goods_id,id,type){

        // 改变激活标签
        switch (type){
            case 1:
                $('#key1-'+id).addClass('active').siblings().removeClass('active');
                break;
            case 2:
                $('#key2-'+id).addClass('active').siblings().removeClass('active');
                break;
            case 3:
                $('#key3-'+id).addClass('active').siblings().removeClass('active');
                break;
            case 4:
                $('#key4-'+id).addClass('active').siblings().removeClass('active');
                break;
        }

        
        var key1 = '';
        var key2 = '';
        var key3 = '';
        var key4 = '';
        var i =1;

        // 获取所有激活的标签
        $("#addXls .active").each(function(){
            if(i==1)
                key1 = $(this).text();
            if(i==2)
                key2 = $(this).text();
            if(i==3)
                key3 = $(this).text();
            if(i==4)
                key4 = $(this).text();
            // alert('key'+i)
            i++;
        });
        $('#yx').html(key1+'、'+key2+'、'+key3+'、'+key4)
        // 获取规格价格参数
        $.ajax({
             type: "GET",
             url: "/client/api/get_spec",
             data: {goods_id:goods_id,spec_name_1:key1,spec_name_2:key2,spec_name_3:key3,spec_name_4:key4},
             dataType: "json",
             success: function(data){
                if(data){
                    $('#spec_numbox').show();
                    $('.spec-out').attr('data-price',data.price*100);
                    $('.spec-out').attr('data-spec-price-id',data.id);
                    $('#spec_numbox .mui-btn-numbox-minus').attr('disabled',true);
                    $('.spec-out').val(0);
                    $('.spec-out').addClass('number-hidden');
                    $('#jg').html(data.price)
                }else{
                    $('#spec_numbox').hide();
                    $('#jg').html('0.00')
                }
            }
         });

    }

    var data_goods_list = eval({$goods_list|json_encode=true});
    var data_store = eval({$store|json_encode=true});
	window.localStorage.youhui=''
	window.onload=function(){
		jQuery('.youhuijwrap')[0].setAttribute('style','width:'+(jQuery('.youhuijwrap')[0].children.length*157)+'px')
	}
	function lingqu(id){
		jQuery.ajax({
		    url:"{:url('add_coupon')}",
		    data: {coupon_id:id},
		    type: "POST",
		    dataType: 'json',
		    beforeSend: function () {
		        // jQuery.showLoading('正在获取中',function () {});
		    },
		    success: function(res){
				jQuery.loadSuccess(res.message,function () {
				    mui.toast(res.message,{ duration: 3000 });
				});
		        // if (res.code == 200) {
		            
		        // }else{
		               
		        // }
		    },
		    error: function (xhr) {
		        // 只有请求不正常（状态码不为200）才会执行
		        jQuery.loadError('请求异常',function () {
		            mui.toast("错误码："+xhr.status,{ duration: 3000 });
		        });
		    },
		});
	}
    //解决从确认订单返回的时候点餐信息丢失问题
    jQuery('.numbox-out').map(function(){
        if(this.value > 0){
            showNumber(jQuery(this),this.value);
        }
    });

    //店铺休息提醒
    if(data_store['open'] == 0){
        var open_tip_html =
            `
                    本店已休息
                    <span class="open-tip">营业时间
                    {eq name="store.time1_status" value="1"}{$store.start_time1|substr=0,5}-{$store.end_time1|substr=0,5}<br>{/eq}
                    {eq name="store.time2_status" value="1"}{$store.start_time2|substr=0,5}-{$store.end_time2|substr=0,5}<br>{/eq}
                    {eq name="store.time3_status" value="1"}{$store.start_time3|substr=0,5}-{$store.end_time3|substr=0,5}<br>{/eq}
                    </span>
                    `;
        mui.alert(open_tip_html, '', function() {});
    }

    //设置各块面板的初始宽高
    jQuery(".all_list").focus();
    var width = jQuery("body").width();
    width = parseInt(width) * 0.73 - 1 + "px";
    jQuery(".all_list").css("width", width);
    jQuery(".bottom_nav").css("width", jQuery("body").width());
    jQuery(".menus").css("height", jQuery(window).height() * 1 - 158);
